<div class="container">
  <h1><%= @forum_thread.subject %></h1>
  <p class="text-muted">Created by <%= @forum_thread.user.email %></p>
  
  <hr />

  <% @forum_thread.forum_posts.each do |forum_post| %>
    <p class="text-muted">Posted by <%= forum_post.user.email %></p>
    <%= forum_post.body %>
  <% end %>
  
</div>